rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isSignedIn() {
      return request.auth != null;
    }
    
    // Helper function to check if user owns the document
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // --- Subscription Helpers ---
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function hasPlan(plans) {
      return getUserData().plan in plans;
    }

    function isPro() {
      return hasPlan(['pro', 'elite']);
    }

    function isElite() {
      return hasPlan(['elite']);
    }

    // --- Core Velo Rules ---

    match /users/{userId} {
      allow read: if true;
      allow create: if isSignedIn() && isOwner(userId);
      allow update: if isSignedIn() && (isOwner(userId) || isFollowCountUpdate());
      allow delete: if isSignedIn() && isOwner(userId);

      // Subcollections for social social
      match /followers/{followerId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
      match /following/{followingId} {
        allow read: if true;
        allow write: if isSignedIn() && isOwner(userId);
      }

      // Notifications Sub-collection
      match /notifications/{notificationId} {
        allow read: if isSignedIn() && isOwner(userId);
        allow create: if isSignedIn();
        allow update: if isSignedIn() && isOwner(userId);
        allow delete: if isSignedIn() && isOwner(userId);
      }
    }

    // Posts (Registry Content)
    match /posts/{postId} {
      allow read: if true;
      allow create: if isSignedIn();
      // Allow updates for engagement (views, likes) even if not owner, 
      // but strictly restrict what fields can be changed by non-owners
      allow update: if isSignedIn(); 
      allow delete: if isSignedIn() && resource.data.creatorId == request.auth.uid;

      // Subcollection for Comments
      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn() && (resource.data.userId == request.auth.uid);
      }

      // Subcollection for Likes
      match /likes/{likeId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow delete: if isSignedIn() && resource.data.userId == request.auth.uid;
      }
    }

    match /follows/{followId} {
      allow read: if true;
      allow create: if isSignedIn() && request.auth.uid == request.resource.data.followerId;
      allow delete: if isSignedIn() && resource.data.followerId == request.auth.uid;
    }

    function isFollowCountUpdate() {
      let diff = resource.data.diff(request.resource.data);
      return diff.changedKeys().hasOnly(['followers', 'following', 'updatedAt']);
    }

    // Stories (Transmission Content)
    match /stories/{storyId} {
      allow read: if true;
      allow create: if isSignedIn();
      allow update, delete: if isSignedIn() && resource.data.userId == request.auth.uid;
    }

    // messageCounts (for rate limiting)
    match /messageCounts/{countId} {
      allow read: if isSignedIn() && (resource == null || resource.data.userId == request.auth.uid);
      allow create, update: if isSignedIn() && request.resource.data.userId == request.auth.uid;
    }

    // --- Infrastructure & signaling ---

    // Conversations & Messages
    match /conversations/{conversationId} {
      allow read: if isSignedIn() && (
        resource == null || request.auth.uid in resource.data.participants
      );
      allow update, delete: if isSignedIn() && request.auth.uid in resource.data.participants;
      allow create: if isSignedIn();
      
      match /messages/{messageId} {
        allow read: if isSignedIn() && (
          get(/databases/$(database)/documents/conversations/$(conversationId)) == null ||
          request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants
        );
        // Only allow image/file attachments if on Pro+ plan
        allow create: if isSignedIn() && (
          !request.resource.data.hasAttachment || isPro()
        );
        allow delete: if isSignedIn() && resource.data.senderId == request.auth.uid;
      }
    }

    // Calls (WebRTC signaling)
    match /calls/{callId} {
      allow read, write: if isSignedIn();
      match /{candidatesCol}/{candidateId} {
        allow read, write: if isSignedIn();
      }
    }

    // AI conversations
    match /ai_conversations/{docId} {
      allow read, update, delete: if isSignedIn() && resource.data.uid == request.auth.uid;
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
    }

    // User settings (preferences, toggles, etc.)
    match /user_settings/{userId} {
      allow read, write: if isSignedIn() && isOwner(userId);
    }

    // User reports / support messages
    match /user_reports/{reportId} {
      allow create: if isSignedIn() && request.resource.data.uid == request.auth.uid;
      allow read: if false;
      allow update, delete: if false;
    }

    // --- Legacy / Compatibility ---
    match /{path=**} {
      allow read, write: if false; // Deny by default for unmatched paths
    }
  }
}
